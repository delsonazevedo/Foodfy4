    <div class="item">
        <div>Avatar</div>
        <div>
            <input type="hidden" name="file_id" value="{{avatar.id}}">
            <input type="text" id="avatar-url" value="{{avatar.src}}" readonly>
        </div>
    </div>
    {%endif%}
        <div class="item">
