        <div>Avatar</div>
        {%endif%}
        <div class="avatar">
            <p class="btn-avatar">
            Enviar Avatar
            </p>
            <input 
            id="avatar-input"
            type="file" 
            name="photo"
            accept="imgage/*"
            > 
        </div>
    </div>
