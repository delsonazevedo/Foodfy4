{% extends "layout.njk" %}

{%block head%}
    <title>Gerenciar Chefs - Foodfy</title>
    {%endblock%}

    {% block content %}
        <div class="chef-header">
            <h2>Chef:
                {{chef.name}}</h2>
            <span>
                <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
            </span>
        </div>
        <div class="chef-details">
            {%for chefImage in chefImage %}
            {%if chefImage.id == chef.file_id%}
            <img src="{{chefImage.src}}" alt="{{chef.name}}">
            {%endif%}
            {%endfor%}
            <h3>{{chef.name}}</h3>
            {%if chef.total_recipes == 1%}
            <p>{{chef.total_recipes}} receita</p>
            {%else%}
            <p>{{chef.total_recipes}} receitas</p>
            {%endif%}
        </div>
        <div class="chef-header">
            <h2>Receitas:</h2>
        </div>
        <div class="recipes-cards">
            {% for recipe in recipes %}
                <div class="recipe-card">
                    {%for recipeImage in recipeImages %}
                    {%if recipeImage.recipe_id == recipe.id %}
                    <img src="{{recipeImage.src}}" alt="{{recipe.title}}">
                    {%endif%}
                    {%endfor%}
                    <div>
                        <h3 class="title">{{recipe.title}}</h3>
                        {%for chef in chefOptions %}
                        {%if chef.id == recipe.chef_id%}
                        <p class="author">por {{chef.name}}</p>
                        {%endif%}
                        {%endfor%}
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="rights">
            <p>Todos direitos reservados, receitas Foodfy.</p>
        </div>

        <script src="/scripts.js"></script>
    {% endblock %}